@model Dziennik.Models.Przedmiot

@{
    ViewBag.Title = "Details";
}

<h2>Szczegóły przedmiotu</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Prowadzący
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wykładowca.Imię)
            @Html.DisplayFor(model => model.Wykładowca.Nazwisko)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nazwa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skrót)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skrót)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PunktyECTS)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PunktyECTS)
        </dd>
        @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Wykładowca")) { 
        <dt>
            Oceny
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Nr albumu</th>
                    <th>Imię studenta</th>
                    <th>Nazwisko studenta</th>
                    <th>Ocena</th>
                </tr>
                @foreach (var item in Model.Wyniki)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.NrAlbumu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Imię)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Nazwisko)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ocena)
                        </td>
                    </tr>
                }
                <th>
                    @Html.ActionLink("Dodaj ocenę", "Create", "Wynik")
                </th>
            </table>
        </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Powrót", "Index")
</p>
