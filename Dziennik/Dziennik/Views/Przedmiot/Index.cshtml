@model IEnumerable<Dziennik.Models.Przedmiot>

@{
    ViewBag.Title = "Index";
}

<h2>Lista przedmiotów</h2>

<p>
    @Html.ActionLink("Dodaj przedmiot", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa przedmiotu
        </th>
        <th>
            Prowadzący
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skrót)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PunktyECTS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wykładowca.Imię)
            @Html.DisplayFor(modelItem => item.Wykładowca.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skrót)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PunktyECTS)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
